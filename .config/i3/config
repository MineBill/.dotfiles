	set $workspace10 "10=>"



# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

#coloring
set $bg-color #dfd
set $inactive-bg-color #242424
set $text-color #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color #E53935

#window type			border				background			text				indicator
client.focused 			$bg-color 			$bg-color 			$text-color
client.unfocused 		$inactive-bg-color 	$inactive-bg-color 	$inactive-text-color
client.focused_inactive $inactive-bg-color 	$inactive-bg-color 	$inactive-text-color
client.urgent 			$urgent-bg-color 	$urgent-bg-color 	$text-color

for_window [class=".*"] border pixel 2

hide_edge_borders both
new_window pixel

gaps inner 6
gaps outer 6

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
set $status-bg-color #242424
set $status-txt-color #eeeeee

# Focused workspace colors
set $status-fw-bg-color #535353
set $status-fw-border-color #dfdfdf

# Inactive workspace colors
set $status-iw-bg-color #242424
set $status-iw-border-color #252525

# Urgent workspace colors
set $status-uw-bg-color #ff0000
set $status-uw-border-color #ffffff
bar {
        status_command i3status
        
        position bottom
		mode hide
		modifier Mod4
        colors{
        	background $status-bg-color
        	
			# Type              # Border Color           # Background Color    # Text Color
        	focused_workspace 	$status-fw-border-color  $status-fw-bg-color   $status-txt-color
        	inactive_workspace 	$status-iw-border-color  $status-iw-bg-color   $status-txt-color
        	urgent_workspace 	$status-uw-border-color  $status-uw-bg-color   $status-txt-color
        }
}

